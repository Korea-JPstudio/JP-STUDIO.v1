<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.repository.admin.ProductManagementRepository">

    <resultMap id="product_category" type="com.example.demo.domain.ProductCategory">
        <result property="category_id" column="id"/>
        <result property="group_id" column="group_id"/>
        <result property="category_name" column="category_name"/>
    </resultMap>
    <insert id="saveProductMst" parameterType="com.example.demo.domain.Product">
        insert into
            pdt_mst
        values(
            0,
            #{pdt_name},
            #{category_id},
            #{pdt_price},
            now(),
            now()
        )
    </insert>

    <select id="getCategoryList" resultMap="product_category"><!--  join하면 무조건 resultMap-->
        select
        id,
        group_id,
        category_name
        from
        pdt_category_mst
    </select>

    <insert id="saveProductDtl" parameterType="com.example.demo.domain.ProductDetail" >
        insert into
            pdt_dtl
        values(
            0,
            #{pdt_id},
            #{size_id},
            #{size_name},
            #{pdt_color},
            #{pdt_stock},
            now(),
            now()
        )
    </insert>

</mapper>